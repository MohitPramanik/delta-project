<% layout("/layouts/boilerPlate") %>

    <body>
        <div class="row my-3">
            <div class="col col-md-8 mx-auto">
                <h1>Edit your Listing</h1>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="d-flex flex-column gap-3 needs-validation" novalidate enctype="multipart/form-data">
                    <div>
                        <label class="form-label" for="edit-title">Title</label>
                        <input type="text" value="<%= listing.title %>" name="listing[title]" id="edit-title"
                            placeholder="Enter title" class="form-control" required>
                               <div class="invalid-feedback">This is a required field</div>
                    </div>
                    <div>
                        <label for="edit-description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description" id="edit-description"
                            class="form-control" required><%= listing.description %></textarea>
                               <div class="invalid-feedback">This is a required field</div>
                    </div>
                    <div class="d-flex flex-column">
                        <label for="">Original Image</label>
                        <img src="<%= originalImageUrl %>" alt="listing image" width="250">
                    </div>
                    <div>
                        <label for="edit-img-url" class="form-label">Image URL</label>
                        <input type="file" name="listing[image]" id="edit-img-url"
                        class="form-control">
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <label for="edit-price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>"
                            placeholder="Enter price" id="edit-price" class="form-control" required>
                               <div class="invalid-feedback">This is a required field</div>
                        </div>
                        <div class="col-12 col-md-8">
                            <label for="edit-country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>"
                            placeholder="Enter country" id="edit-country" class="form-control" required>
                               <div class="invalid-feedback">This is a required field</div>
                        </div>
                    </div>
                    <div>
                        <label for="edit-location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" id="edit-location"
                            placeholder="Enter location" class="form-control" required>
                               <div class="invalid-feedback">This is a required field</div>
                    </div>

                    <button class="btn btn-dark edit-btn" type="submit" style="width: max-content">Edit</button>
                </form>
            </div>
        </div>
    </body>

    </html>