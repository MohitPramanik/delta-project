<% layout("/layouts/boilerPlate") %>

    <body>
        <div class="row my-4">
            <div class="col col-md-8 mx-auto">
                <h1>Create a New Listing</h1>
                <form action="/listings" method="POST" class="d-flex flex-column gap-3 needs-validation" novalidate enctype="multipart/form-data">
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter title" id="title"
                            class="form-control" required>
                            <div class="invalid-feedback">This is a required field</div>
                    </div>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description" id="description"
                            class="form-control" required></textarea>
                            <div class="invalid-feedback">This is a required field</div>
                    </div>
                    <div>
                        <label for="imgUrl" class="form-label">Upload Listing Image</label>
                        <input type="file" name="listing[image]" id="imgUrl"
                            class="form-control">
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" placeholder="Enter price" id="price"
                            class="form-control" required>
                            <div class="invalid-feedback">This is a required field</div>
                        </div>
                        <div class="col-12 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" placeholder="Enter location" id="location"
                            class="form-control" required>
                            <div class="invalid-feedback">This is a required field</div>
                        </div>
                    </div>
                    <div>
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter country" id="country"
                            class="form-control" required>
                            <div class="invalid-feedback">This is a required field</div>
                    </div>

                    <button class="btn btn-dark add-btn" style="width: max-content" type="submit">Add</button>
                </form>
            </div>
        </div>
    </body>